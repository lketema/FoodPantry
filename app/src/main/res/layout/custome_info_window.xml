<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:id="@+id/customInfoAdapter">


    <!--Title-->

    <TextView
        android:id="@+id/pantryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/pantryAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pantryName"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        />

    <!--  android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" -->
    <TextView
        android:id="@+id/pantryPhone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/pantryAddress"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        />

    <TextView
        android:id="@+id/pantryWebsite"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/pantryPhone"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        />



    <!-- Type -->

    <!--Time and date-->
    <TextView
        android:id="@+id/pantryTimeOpenClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/pantryWebsite"
        />

    <!--Event Specific Layout-->
    <TextView
        android:id="@+id/eventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pantryTimeOpenClose"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
         />

    <TextView
        android:id="@+id/pantryMoreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventDate"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="Click for More Info!" />


    </RelativeLayout>


